<%- include("includes/head") %>
<script src="/scripts/addToCart.js" defer></script>
  <body>
    <%- include("includes/header") %>
    <main>
      <h3 class="text">Some of our special offers!</h3>
      <div
        id="carouselExampleControls"
        class="carousel slide"
        data-bs-ride="carousel"
      >
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="images/hamburger.jpeg" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="images/pizza.jpeg" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="images/sandwich.jpeg" class="d-block w-100" alt="..." />
          </div>
          <div class="carousel-item">
            <img src="images/hotdog.jpeg" class="d-block w-100" alt="..." />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-bs-target="#carouselExampleControls"
          data-bs-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-bs-target="#carouselExampleControls"
          data-bs-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>

      <section id="food">
        <div class="row row-cols-1 row-cols-md-3 g-4">
          <div class="col">
            <div class="card">
              <img src="images/hamburger.jpeg" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title">Hamburger</h5>
                <p class="card-text" data-paragraph="hamburger">
                  Best burgers in town with fresh bread and healthy meat.
                </p>
                <h6>Price: <span class="card-price">10$</span></h6>
                <button class="btn btn-outline-dark food">Add to cart</button>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card">
              <img src="images/pizza.jpeg" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title">Pizza</h5>
                <p class="card-text">
                  Try pizzas that you will never regret that you did!
                </p>
                <h6>Price: <span class="card-price">10$</span></h6>
                <button class="btn btn-outline-dark food">Add to cart</button>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card">
              <img src="images/sandwich.jpeg" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title">Sandwich</h5>
                <p class="card-text">
                  Sometimes all we need is a sandwich and we know where
                </p>
                <h6>Price: <span class="card-price">10$</span></h6>
                <button class="btn btn-outline-dark food">Add to cart</button>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card">
              <img src="images/hotdog.jpeg" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title">Hot Dog</h5>
                <p class="card-text">
                  Hot Dogs never been as delicious and hot as now.
                </p>
                <h6>Price: <span class="card-price">10$</span></h6>
                <button class="btn btn-outline-dark food">Add to cart</button>
              </div>
            </div>
          </div>
          <div class="col">
            <div class="card">
              <img name="photo" src="images/fries.jpeg" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 name="title" class="card-title">French Fries</h5>
                <p name="description" class="card-text">
                  Tasty and fresh french fries always in each order.
                </p>
                <h6>Price: <span class="card-price">10$</span></h6>
                <button class="btn btn-outline-dark food">Add to cart</button>   
            </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <footer>
      <section id="footer">
        <div id="footer-part-one">
          <a href="">Contact us</a>
          <a href="/about">About us</a>
          <a href="">Location</a>
        </div>
        <div id="footer-part-two">
          <p id="logo">FastFood</p>
          <p>2022 FastFood, Inc.</p>
        </div>
      </section>
    </footer>
  </body>
</html>
